<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:elevation="10sp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/name_sher"
                android:text="Oshiq derlar meni"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:layout_width="0dp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@id/like_icon"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="20dp"
                android:visibility="invisible"
                android:src="@drawable/ic_vector"
                app:layout_constraintTop_toTopOf="@id/name_sher"
                app:layout_constraintBottom_toBottomOf="@id/name_sher"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/name_sher"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/desc_sher"
                android:text="Sizni birinchi bor ko’rganimdayoq menga yoqib
qolgansiz, lekin bu tuyg’u sevgiga aylanadi deb
o’ylamagandim . . . "
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_sher"
                android:textColor="#6A6A6A"
                android:textSize="17dp"
                android:fontFamily="@font/sf_pro_regular"
                android:layout_width="0dp"
                android:maxLines="3"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>